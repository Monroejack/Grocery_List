<h1 class='text-center'>Grocery List</h1>

<div class='row'>

<div class= 'col-md-4'>
<%= link_to new_item_path, remote: true do %>
  <button class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> Add Item </button>
  <% end %>
<div id="item-form" style="display:none;"></div>
</div>

<div class='col-md-8'>

<ul id='items'>
  <%= render @items.order('deadline') %>
</ul>

</div>

</div>
